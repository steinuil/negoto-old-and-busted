%form#post-form{ action: "/post#{id}", method: "POST",
   enctype: "multipart/form-data" }
  - if page == 0
    %input.form.text#subject{ type: "text", placeholder: "Subject",
    name: "subject" }
    %br
  %input.form.text#name{ type: "text", placeholder: "Name",
    value: "Anonymous", name: "name" }<
  - if page == 0
    %input.form.button#send{ type: 'submit', value: 'Post' }
  - else
    %input.form.button#send{ type: "button", value: "Post",
      onclick: "qr.upload();" }
  %br
  %textarea#body{ placeholder: "Comment", name: "body" }
  %br
  - unless page == 0
    %a.form.button#close-form{ onclick: "qr.destroy()" }< âœ•
  %label.form.button#file{ for: "filei" }< Add attachment
  %input#filei{ onchange: "attachment_name()", type: "file", name: "file",
    accept: "image/jpeg, image/png, image/gif, video/webm" }<
  - unless page == 0
    %input#sagei{ type: "checkbox", name: "sage" }<
    %label.form.button#sage{ for: "sagei" }< Sage
  %input#spoileri{ type: "checkbox", name: "spoiler" }<
  %label.form.button#spoiler{ for: "spoileri" } Spoiler
