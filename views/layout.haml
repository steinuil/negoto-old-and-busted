- @sub = (@op ? @op[:subject] : @board[:name]) if @board
%html
  %head
    %title= @board ? "/#{@board[:id]}/ - #{@sub}" : @title
    %meta{ charset: "utf-8" }
    %link{ type: "text/css", rel: "stylesheet", href: "/#{@type}.css" }
    %link{ type: "image/x-icon", rel: "icon", href: "/favicon.ico" }
  %body
    %header
      %nav
        [
        %a{ href: "/" } Home
        - boards.each do |board|
          \/
          %a{ href: "/#{board[:id]}/",
              title: "#{board[:name]}" }= board[:id]
        ] [
        %a{ href: "/about" } about
        \/
        %a{ href: "https://github.com/steinuil/negoto" } source
        ]
        - if $config[:links]
          [
          - $config[:links].each.with_index do |link, i|
            = "/" if i > 0
            %a{ href: link[:url] }= link[:name]
          ]
      %img#banner{ src: "/#{banner}" }
      %h1#title= @board ? "/#{@board[:id]}/ - #{@board[:name]}" : @title
    %hr
    = yield
